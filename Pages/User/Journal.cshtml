@page
@model AppDomainProject.JournalModel
@{
    ViewData["Title"] = Model.JournalLabelText();
}

<h1>Journal</h1>
<table class="table">
    <thead>
        <tr>
            <th>Account</th>
            <th>Transaction Name</th>
            <th>Amount</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Transactions.Count; i++)
    {
        var line = Model.JournalLine(i);
        <tr>
            <td>@line.AccountName</td>
            <td>@line.TransactionName</td>
            <td>@line.Amount</td>
            <td>@line.Desc</td>
            <td>
                <form method="post">
                    <input type="submit" value="Delete" title="click to  delete" asp-page-handler="RemoveTransaction" asp-route-transaction="@Model.Transactions[i].ID" asp-route-journal="@Model.Journal"/>
                </form>
            </td>
        </tr>
    }
</table>


<h2>New Entry</h2>

<form method="post">
    <div class=" form-group">
        <label asp-for="NewTransaction.AccountNumber" ></label>
        <select asp-for="NewTransaction.AccountNumber" asp-items="Model.GetAccounts()" title=" Select Account Number"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewTransaction.Amount" ></label>
        <input asp-for="NewTransaction.Amount" title="Enter Amount "/>
    </div>
    <div class="form-group">
        <label asp-for="NewTransaction.Name" ></label>
        <input asp-for="NewTransaction.Name" title="Enter Transaction Name"/>
    </div>
    <div class="form-group">
        <label asp-for="NewTransaction.Description" ></label>
        <input asp-for="NewTransaction.Description" title="Enter Description "/>
    </div>
    <div class="form-group">
        <label asp-for="NewTransaction.TransactionDate" ></label>
        <input asp-for="NewTransaction.TransactionDate" title="Enter today's date "/>
    </div>

    <input type="submit" value="Add" title="click to add" asp-page-handler="AddTransaction" asp-route-journal="@Model.Journal"/>

    <input hidden asp-for="NewTransaction.ID" />
    <input hidden asp-for="NewTransaction.Journal" />
</form>

@if(Model.Journal != null)
{
    <h2>Submit Journal</h2>
    <form method="post">
        <input type="submit" title="click submit" value="Submit" asp-page-handler="Submit" asp-route-journal="@Model.Journal.Value" />
    </form>
}