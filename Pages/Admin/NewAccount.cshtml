@page
@model AppDomainProject.NewAccountModel
@{
    ViewData["Title"] = "New Account";
}
@using AppDomainProject.Models;

<h1><img src="~/Images/NewAccount.png" style="margin:0 auto;" />New Financial Account</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Account.AccountName"></label>
        <input asp-for="Account.AccountName" title="Enter Account Name"/>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountNumber"></label>
        <input asp-for="Account.AccountNumber" title="Enter Account Number " />
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountDescription"></label>
        <input asp-for="Account.AccountDescription" title="Enter the Account Description " />
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountCategory"></label>
        <input asp-for="Account.AccountCategory"  title="Enter the Category of Account e.g asset "/>
    </div>

    <div class="form-group">
        <label asp-for="Account.AccountSubCategory"></label>
        <input asp-for="Account.AccountSubCategory" title="Entert the Subcategory of account e.g current asset" />
    </div>

    <div class="form-group">
        <label asp-for="Account.InitialBalance"></label>
        <input asp-for="Account.InitialBalance" title="Enter the intial balance e.g 100.20" />
    </div>

    <div class="form-group">
        <label asp-for="Account.Order"></label>
        <input asp-for="Account.Order" title="Enter the order" />
    </div>

    <div class="form-group">
        <label asp-for="Account.Statement"></label>
        <select asp-for="Account.Statement" asp-items="Html.GetEnumSelectList<AccountData.AccountStatement>()" title=" IS- income statement  BS- Balance Sheet  RT-Retained Earning Statement"></select>
    </div>

    <div class="form-group">
        <label asp-for="Account.NormalSide"></label>  <br />
        <input type="radio" asp-for="Side" value="@Model.Sides[0]" style="margin:4px"/>@Model.Sides[0] <br />
        <input type="radio" asp-for="Side" value="@Model.Sides[1]" style="margin:4px"/>@Model.Sides[1]<br />
    </div>

    <input type="submit" value="Create" title="Click to create account " />

    <div>
        <input hidden asp-for="Account.Balance" />
        <input hidden asp-for="Account.Credit" />
        <input hidden asp-for="Account.Debit" />
        <input hidden asp-for="Account.ID" />
        <input hidden asp-for="Account.TimeAccountAdded" />
        <input hidden asp-for="Account.Comment" />
        <input hidden asp-for="Account.NormalSide" />
        <input hidden asp-for="Account.Active" />
    </div>
</form>


<a href="/Admin">Back </a>