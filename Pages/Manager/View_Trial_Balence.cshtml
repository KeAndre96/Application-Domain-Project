@page
@model AppDomainProject.View_Trial_BalenceModel
@{
    ViewData["Title"] = "View_Trial_Balence";
}

<h1>View Trial Balence</h1>
<table class="table">
    <thead>
        <tr>
            <th>Account Name</th>
            <th>Credit</th>
            <th>Debit</th>
        </tr>
    </thead>
    @{ 
		int count = 0;
    }
    @foreach (double[] item in Model.complete_list.Values)
	{
        List<string> temp = Model.names;
        <tr>
            <td>@temp[count]</td>
            <td>@item[0]</td>
            <td>@item[1]</td>
        </tr>
		count++;
	}
</table>
<form method="get">
    <div class="form-group">
        <label>Total Credit Balence</label>
        <input asp-for="total_credit_balence" disabled />
    </div>
    <div class="form-group">
        <label>Total Debit Balence</label>
        <input asp-for="total_debit_balence" disabled />
    </div>
</form>
