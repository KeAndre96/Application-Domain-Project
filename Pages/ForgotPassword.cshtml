@page
@model AppDomainProject.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="text-center">
    <h1 class="display-4">Forgot Password</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="Question1" class="custom-control-label"></label>
            <input asp-for="Question1" class="control-label" />
        </div>
        <div class="form-group">
            <label asp-for="Question2" class="custom-control-label"></label>
            <input asp-for="Question2" class="control-label" />
        </div>
        <div class="form-group">
            <label asp-for="Question3" class="custom-control-label"></label>
            <input asp-for="Question3" class="control-label" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="control-label" />
        </div>
        <div class="form-group">
            <button asp-page-handler="Send"  class="btn btn-default">Send</button>
        </div>


    </form>
</div>
