@page
@model AppDomainProject.Pages.ForgotPWModel
@{
    ViewData["Title"] = "ForgotPassword";
}

@if (Model.PageState == 0)
{
    <h1 class="display-4">Forgot Password</h1>
    <form method="post">
        <div runat="server" class="form-group">
            <b>
                Please enter your user ID and email to begin the new password process.

            </b>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="control-label" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="control-label" />
            </div>

            <div class="form-group" style="padding: 0 5px 0 5px;">
                <input asp-page-handler="IdEmailCancel" type="submit" value="Cancel" class="btn btn-primary" />
                <input asp-page-handler="IdEmailNext" type="submit" value="Next" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div align="right" valign="bottom">
        <input title="click here for help" type="submit" value="Help" class="btn btn-danger" asp-page="HelpPages/Help" />
    </div>
}
@if (Model.PageState == 1)
{
    <form method="post">
        <div class="form-group">
            <b>
                Please enter your security question answers to continue.

            </b>
            <div class="form-group">
                <label asp-for="SecQuestion1" class="control-label"></label>
                <input asp-for="SecQuestion1" type="text" class="control-label" />
            </div>

            <div class="form-group">
                <label asp-for="SecQuestion2" class="control-label"></label>
                <input asp-for="SecQuestion2" type="text" class="control-label" />
            </div>

            <div class="form-group">
                <label asp-for="SecQuestion3" class="control-label"></label>
                <input asp-for="SecQuestion3" type="text" class="control-label" />
            </div>

            <div class="form-group" style="padding: 0 5px 0 5px;">
                <input asp-page-handler="SecQuestionsCancel" type="submit" value="Cancel" class="btn btn-primary" />
                <input asp-page-handler="SecQuestionsBack" type="submit" value="Prev" class="btn btn-primary" />
                <input asp-page-handler="SecQuestionsNext" type="submit" value="Next" class="btn btn-primary" />
            </div>
        </div>
    </form>
    
}

@if (Model.PageState == 2)
{
    <form method="post">
        <div class="form-group">
            <b>
                Please enter your new password and password confirmation.

            </b>
            <div class="form-group">
                <label asp-for="NewPass" class="control-label"></label>
                <input asp-for="NewPass" class="control-label" />
            </div>

            <div class="form-group">
                <label asp-for="NewPassConfirm" class="control-label"></label>
                <input asp-for="NewPassConfirm" class="control-label" />
            </div>

            <div id="FinishNewPass" class="form-group" style="padding: 0 5px 0 5px;">
                <input asp-page-handler="FinishNewPWCancel" type="submit" value="Cancel" class="btn btn-primary" />
                <input asp-page-handler="FinishNewPW" type="submit" value="Send" class="btn btn-primary" />
            </div>
        </div>
        
    </form>
}