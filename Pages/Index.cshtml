@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}
	
	<div class="text-left" style="width:50%">
		<h1 class="display-4">Welcome</h1>
		<form method="post">
			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="control-label" />
			</div>
			<div class="form-group">
				<label asp-for="Pass" class="control-label"></label>
				<input asp-for="Pass" type="password" class="control-label" />
			</div>
			<span style="display:inline-block; padding: 5px; text-align:center;margin-left:12%">
				<span class="form-group">
					<input title=" Click to Login"type="submit" value="Log In" class="btn btn-primary" />
					<input title="Click Here To Get Password Help" type="submit" value="Forgot Password" class="btn btn-primary" asp-page="ForgotPW" />
				</span>
				<span class="form-group">
					<input title=" Click to Create New Account" type="submit"  value="Create New User" class="btn btn-primary" asp-page="UserPersonalInformation" />
					
				</span>
			</span>
			
		</form>
	</div>

