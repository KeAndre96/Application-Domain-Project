@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}
	<div class="text-left">
		<img src="~/Images/Logo.PNG" style="margin:0 auto; width:25%;" />
	</div>
	<div class="text-center">
		<h1 class="display-4">Welcome</h1>

		<form method="post">
			<div class="form-group">
				<label asp-for="Id" class="control-label"></label>
				<input asp-for="Id" class="control-label" />
			</div>
			<div class="form-group">
				<label asp-for="Pass" class="control-label"></label>
				<input asp-for="Pass" type="password" class="control-label" />
			</div>
			<div class="form-group">
				<input type="submit" value="Log In" class="btn btn-primary" />
			</div>
			<div class="form-group">
				<input type="submit" value="Forgot Password" class="btn btn-primary" asp-page="ForgotPW" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create New User" class="btn btn-primary" asp-page="UserPersonalInformation" />
			</div>
			<div align="right" valign="bottom">
				<input type="submit" value="Help" class="btn btn-danger" asp-page="HelpPages/Help" />
			</div>


		</form>
	</div>

