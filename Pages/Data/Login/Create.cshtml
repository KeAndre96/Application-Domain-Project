@page
@model AppDomainProject.Pages.Data.Login.CreateModel
@using AppDomainProject.Models;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LoginData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginData.ID" class="control-label"></label>
                <input asp-for="LoginData.ID" class="form-control" />
                <span asp-validation-for="LoginData.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginData.Password" class="control-label"></label>
                <input asp-for="LoginData.Password" class="form-control" />
                <span asp-validation-for="LoginData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginData.Status" class="control-label"></label>
                <select asp-for="LoginData.Status" class="form-control", asp-items="Html.GetEnumSelectList<AccountStatus>()"></select>
                <span asp-validation-for="LoginData.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginData.Class" class="control-label"></label>
                <select asp-for="LoginData.Class" class="form-control", asp-items="Html.GetEnumSelectList<AccountType>()"></select>
                <span asp-validation-for="LoginData.Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
